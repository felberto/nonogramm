<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ch.ffhs.Controller.HomeController">
    <children>
        <VBox alignment="CENTER" layoutY="416.0" spacing="20.0" AnchorPane.bottomAnchor="100.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <children>
                <Label text="Nonogramme">
                    <font>
                        <Font name="System Bold" size="39.0"/>
                    </font>
                </Label>
                <Pane fx:id="pane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="300.0"
                      style="-fx-background-color: #CDE4FF;">
                    <VBox.margin>
                        <Insets left="150.0" right="150.0"/>
                    </VBox.margin>
                </Pane>
                <HBox alignment="CENTER" spacing="120.0">
                    <children>
                        <Button fx:id="btnRestart" mnemonicParsing="false" text="Restart"/>
                        <ChoiceBox fx:id="dropdownLevel" prefHeight="26.0" prefWidth="86.0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="100.0">
                    <children>
                        <Button fx:id="btnSolution" mnemonicParsing="false" text="Lösung anzeigen"/>
                        <Button mnemonicParsing="false" text="Zurück"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
