<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ch.ffhs.Controller.HomeController">
    <children>
        <VBox fx:id="vbox_main" alignment="CENTER" layoutY="416.0" spacing="15.0"
              style="-fx-background-color: linear-gradient(to bottom right, #645E9D, #98D0C8);"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" spacing="190.0">
                    <children>
                        <Button fx:id="btnTutorial" mnemonicParsing="false" onAction="#clickTutorial" prefHeight="48.0"
                                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 2; -fx-font-size: 20; -fx-text-fill: #645E9D; -fx-spacing: 2"
                                text="Tutorial"/>
                        <Label fx:id="timer"
                               style="-fx-background-color: none; -fx-font-size: 20; -fx-text-fill: #645E9D; -fx-spacing: 2;"/>
                        <ChoiceBox fx:id="choiceBoxLevel" prefHeight="48.0" prefWidth="200.0"/>
                    </children>
                </HBox>
                <VBox fx:id="vbox_home" alignment="CENTER" maxWidth="-Infinity" prefWidth="490.0"
                      style="-fx-padding: 1em 7em 1em 1em;">
                </VBox>
                <HBox alignment="CENTER" spacing="235.0">
                    <children>
                        <Button fx:id="btnRestart" mnemonicParsing="false" onAction="#clickRestart"
                                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 2; -fx-font-size: 20; -fx-text-fill: #645E9D;"
                                text="Restart"/>
                        <Button fx:id="btnNextGame" mnemonicParsing="false" onAction="#clickNextGame"
                                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-text-fill: #645E9D; -fx-border-width: 2; -fx-font-size: 20;"
                                text="Nächstes Spiel"/>

                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="215.0">
                    <children>
                        <Button fx:id="btnSolution" mnemonicParsing="false" onAction="#clickSolution"
                                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 2; -fx-font-size: 20; -fx-text-fill: #645E9D; -fx-spacing: 2"
                                text="Lösung anzeigen"/>
                        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#clickBack"
                                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 2; -fx-font-size: 20; -fx-text-fill: #645E9D; -fx-spacing: 2"
                                text="Zurück"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
