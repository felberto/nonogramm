<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane_main" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="ch.ffhs.Controller.StartController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" nodeOrientation="INHERIT" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../assets/start.png"/>
            </image>
        </ImageView>
        <Button fx:id="btnPlay" onAction="#clickPlay" layoutX="48.0" layoutY="264.0" mnemonicParsing="false"
                prefHeight="72.0" prefWidth="336.0" text="Spielen"
                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 5; -fx-font-size: 40; -fx-text-fill: #645E9D; -fx-spacing: 10">
            <font>
                <Font name="Comic Sans MS" size="35.0"/>
            </font>
        </Button>
        <Button fx:id="btnHighscore" onAction="#clickHighscore" layoutX="48.0" layoutY="365.0" mnemonicParsing="false"
                prefHeight="72.0"
                prefWidth="336.0" text="Highscores"
                style="-fx-background-color: none; -fx-border-color: #645E9D; -fx-border-width: 5; -fx-font-size: 40; -fx-text-fill: #645E9D">
            <font>
                <Font name="Comic Sans MS" size="35.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
